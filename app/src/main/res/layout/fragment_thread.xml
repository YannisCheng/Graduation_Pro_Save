<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_dividers_12"
    >
    <include layout="@layout/tool_action_bar_layout"/>


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="@dimen/activity_edge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/listview_item_user_info"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/activity_edge"
                android:background="@color/white_dividers_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/my_teacher"
                    android:background="@drawable/bg_my_fragment_selector"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigation_bottom"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_width="@dimen/navigation_bottom"
                        android:layout_height="@dimen/navigation_bottom"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/db_img"
                            android:src="@mipmap/cuoti"
                            android:layout_width="@dimen/statue_bar"
                            android:layout_height="@dimen/statue_bar" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/set_initdb_text"
                            android:textSize="@dimen/small_title_text"
                            android:textColor="@color/black_text_87"
                            android:text="数据本地化"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/activity_edge"
                    android:layout_marginRight="@dimen/activity_edge"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black_dividers_12"/>
                <LinearLayout
                    android:id="@+id/my_talking"
                    android:background="@drawable/bg_my_fragment_selector"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigation_bottom"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginLeft="4dp"
                        android:layout_width="@dimen/navigation_bottom"
                        android:layout_height="@dimen/navigation_bottom"
                        android:gravity="center">
                        <ImageView
                            android:src="@mipmap/shoucang"
                            android:layout_width="@dimen/statue_bar"
                            android:layout_height="@dimen/statue_bar" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <TextView
                            android:textSize="@dimen/small_title_text"
                            android:textColor="@color/black_text_87"
                            android:text="同学留言"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/activity_edge"
                android:id="@+id/about_developer"
                android:background="@drawable/bg_my_fragment_selector"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bottom"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="@dimen/navigation_bottom"
                    android:layout_height="@dimen/navigation_bottom"
                    android:gravity="center">
                    <ImageView
                        android:src="@mipmap/developer"
                        android:layout_width="@dimen/statue_bar"
                        android:layout_height="@dimen/statue_bar" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:textSize="@dimen/small_title_text"
                        android:textColor="@color/black_text_87"
                        android:text="用户反馈"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp" />
                </LinearLayout>

                <Button
                    android:layout_marginLeft="132dp"
                    android:visibility="invisible"
                    android:id="@+id/give_up_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/cancel_detail_btn_back"
                    />

                <Button
                    android:layout_marginLeft="32dp"
                    android:visibility="invisible"
                    android:id="@+id/send_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/send_btn_back"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/activity_edge"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/sender_send"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">
                <EditText
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_edge"
                    android:paddingRight="32dp"
                    android:id="@+id/send_msg_to_sender"
                    android:background="@drawable/edit_bg_shork"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/activity_edge"
                    android:layout_marginLeft="@dimen/activity_edge"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <Button
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="32dp"
                    android:layout_alignParentRight="true"
                    android:onClick="getEvent"
                    android:visibility="gone"
                    android:id="@+id/cancel_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/edit_cancel_btn_back"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/activity_edge"
                android:id="@+id/about_me"
                android:background="@drawable/bg_my_fragment_selector"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bottom"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="@dimen/navigation_bottom"
                    android:layout_height="@dimen/navigation_bottom"
                    android:gravity="center">
                    <ImageView
                        android:src="@mipmap/connect"
                        android:layout_width="@dimen/statue_bar"
                        android:layout_height="@dimen/statue_bar" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:textSize="@dimen/small_title_text"
                        android:textColor="@color/black_text_87"
                        android:text="开发者"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/exit"
                android:clickable="true"
                android:layout_marginTop="@dimen/activity_edge"
                android:background="@drawable/bg_my_fragment_selector"
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_bottom"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:layout_width="@dimen/navigation_bottom"
                    android:layout_height="@dimen/navigation_bottom"
                    android:gravity="center">
                    <ImageView
                        android:src="@mipmap/tuichu_one"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <TextView
                        android:textSize="@dimen/small_title_text"
                        android:textColor="@color/black_text_87"
                        android:text="退出登录"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="32dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
